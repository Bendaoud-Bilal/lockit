{
  "name": "lockit",
  "version": "1.0.0",
  "description": "Lockit Password Manager - Desktop Application",
  "main": "electron/main.js",
  "author": "Lockit Team",
  "license": "MIT",
  "scripts": {
    
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\" \"npm run electron:dev\"",
    "electron:dev": "electron .",
    "prebuild": "node scripts/prebuild.js",
    "build": "npm run prebuild && electron-builder build --win",
    "postinstall": "electron-builder install-app-deps"
    
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.lockit.app",
    "productName": "Lockit",
    "copyright": "Copyright Â© 2024 Lockit Team",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "client/dist/**/*",
      "!client/src",
      "!client/node_modules",
      "!server/node_modules/.prisma/client/libquery_engine-*",
      "!**/*.{ts,map,md}"
    ],
    "extraResources": [
      {
        "from": "server",
        "to": "server",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "client/public/icons/icon.ico",
      "artifactName": "${productName}-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Lockit",
      "installerIcon": "client/public/icons/icon.ico",
      "uninstallerIcon": "client/public/icons/icon.ico",
      "installerHeaderIcon": "client/public/icons/icon.ico",
      "deleteAppDataOnUninstall": false,
      "perMachine": false,
      "allowElevation": true
    }
  },
  "dependencies": {
    "@material-tailwind/react": "^2.1.10",
    "axios": "^1.13.2",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.1",
    "crypto-js": "^4.2.0",
    "hi-base32": "^0.5.1",
    "otpauth": "^9.4.1",
    "otplib": "^12.0.1",
    "@tanstack/react-query": "^5.90.10",
    "bootstrap": "^5.3.8",
    "uuid": "^13.0.0",
    "v4": "^0.0.1",
    "zustand": "^5.0.8"
  }
}
{
  "name": "lockit",
  "version": "1.0.0",
  "description": "Lockit Password Manager - Desktop Application",
  "main": "electron/main.js",
  "scripts": {
    
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\" \"npm run electron:dev\"",
    "build:client": "cd client && npm run build",
    "electron:dev": "electron .",
    "electron:build": "electron-builder",
    "start": "npm run build:client && npm run electron:dev"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.lockit.app",
    "productName": "Lockit",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "client/dist/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "client/public/icons/icon.ico"
    }
  },
  "dependencies": {
    "@material-tailwind/react": "^2.1.10",
    "axios": "^1.13.2",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.1",
    "crypto-js": "^4.2.0",
    "hi-base32": "^0.5.1",
    "otpauth": "^9.4.1",
    "otplib": "^12.0.1"
  }
}
